<style>
    tbody {
        tr {
            &:hover {
                background-color: rgba(255, 255, 255, 0.3);
            }
        }

        td {
            position: relative;

            &:hover {
                &:before {
                    content: "";
                    position: absolute;
                    left: 0;
                    right: 0;
                    top: -9999px;
                    bottom: -9999px;
                    background-color: rgba(255, 255, 255, 0.2);
                    z-index: -1;
                }
            }
        }

    }

    #delete-club-popUp {
        max-width: 300%;
        position: absolute;
        display: none;
        top: 35%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 2;
        background: none;
        backdrop-filter: blur (50px);
        border-radius: 10px;
        background-color: rgb(255, 255, 255);
        color: black;
    }

    .title-popUp-delete {
        font-family: 'Garamond';
        padding: 0.5rem;
        font-size: 2.3rem;
        border-radius: 5px;
        margin-bottom: 20px;
        margin-bottom: 5px;
    }

    .corfirm-or-deny-delete-buttons {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
    }

    #update-club-popUp {
        max-width: 500%;
        position: absolute;
        display: none;
        margin: 30px auto;
        padding: 20px;
        backdrop-filter: blur (50px);
        border-radius: 10px;
        box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.2);
        background-color: rgba(38, 89, 133, 0.849);
        color: black;
        font-family: 'Garamond';
    }
</style>

<table data-cy='table-random-clubs-home'>
    <thead>
        <tr>
            <th data-cy='table-title-action'>Action</th>
            <th data-cy='table-title-teams'>Teams</th>
        </tr>
    </thead>
    <tbody data-cy='random-clubs-home'>
        {{#each random_clubs as |club|}}
            <tr>
                <td>
                    {{club.dataValues.club_name}}
                </td>

                <td>
                    <a href="/clubs/{{club.dataValues.id}}" data-cy="view-club-href-home">View</a>,
                    <a href="#" data-cy='update-club-href-home' home-id-update-club="{{club.dataValues.id}}" class="update-club-href">Update</a>,
                    <a href="#" class="delete-club-href" home-id-delete-club="{{club.dataValues.id}}"  data-cy='delete-club-href-home'>Delete</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

<div class="button-container">
    <button data-cy='create-new-club-button-home'>Create your club!</button>
    <button>
        <a href="/clubs?action=all-clubs" data-cy='view-all-clubs-button-home'>All the clubs</a>
    </button>
</div>

<div id="delete-club-popUp">
    <p class="title-popUp-delete" data-cy='delete-club-question-home'>Are you sure you want to delete this club?</p>
    <div class="corfirm-or-deny-delete-buttons">
        <button id="confirm-delete" data-cy='confirm-delete-button-home'>Yes</button>
        <button id="cancel-delete" data-cy='cancel-delete-button-home'>No</button>
    </div>
</div>

<form id="update-club-popUp" >
    <div class="update-club-content">
        <label for="club_name">Club name:</label>
        <input type="text" id="club_name" name="club_name">
    </div>
    <div class="update-club-content">
        <label for="club_adress">Club address:</label>
        <input type="text" id="club_adress" name="club_adress">
    </div>
    <div class="update-club-content">
        <label for="club_foundation_year">Club foundation year:</label>
        <input type="text" id="club_foundation_year" name="club_foundation_year">
    </div>
    <button type="submit" id="confirm-update">Update Club</button>
    <button id="cancel-update"> Cancel </button>
</form>

<script>
    //update script
      let updateHrefs = document.querySelectorAll('#update-href');

    // Hay que hacer un ciclo para ver todos los botones de update que se
    // muestran en home
    for (let i = 0; i < updateHrefs.length; i++) {
        updateHrefs[i].addEventListener('click', function () {
            document.getElementById('update-club-popUp').style.display = 'flex';
        });
    }

    document.getElementById('cancel-update').addEventListener('click', function () {
        document.getElementById('update-club-popUp').style.display = 'none';
    });

    let updateButtons = document.querySelectorAll('.update-club-href');
    let clubIdUpdate;

    for (let i = 0; i < updateButtons.length; i++) {
        updateButtons[i].addEventListener('click', function (event) {
            event.preventDefault();

            clubIdUpdate = this.getAttribute('home-id-update-club');

            document.getElementById('update-club-popUp').style.display = 'flex';

        });
    }
    
    document.getElementById('confirm-update').addEventListener('click', async function () {

        try {

            const response = await fetch(`/clubs/${clubIdUpdate}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    club_name: document.getElementById('club_name').value,
                    club_adress: document.getElementById('club_adress').value,
                    club_foundation_year: document.getElementById('club_foundation_year').value
                }),
            });

            console.log(response + " esta es la response")
            
        }
        catch (error) {
            console.log(error.message);
        }
    })


    //delete script
    let deleteHrefs = document.querySelectorAll('#delete-href');

    // Hay que hacer un ciclo para ver todos los botones de delete que se
    // muestran en home
    for (let i = 0; i < deleteHrefs.length; i++) {
        deleteHrefs[i].addEventListener('click', function () {
            document.getElementById('delete-club-popUp').style.display = 'flex';
        });
    }

    document.getElementById('cancel-delete').addEventListener('click', function () {
        document.getElementById('delete-club-popUp').style.display = 'none';
    });

    let deleteButtons = document.querySelectorAll('.delete-club-href');
    let clubIdDelete;

    for (let i = 0; i < deleteButtons.length; i++) {
        deleteButtons[i].addEventListener('click', function (event) {
            event.preventDefault();

            clubIdDelete = this.getAttribute('home-id-delete-club');

            document.getElementById('delete-club-popUp').style.display = 'flex';

        });
    }
    
    document.getElementById('confirm-delete').addEventListener('click', async function () {

        try {

            const response = await fetch(`/clubs/${clubIdDelete}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                },
            });

            if(response.ok) window.location.href = "/clubs";
            
        }
        catch (error) {
            console.log(error.message);
        }
    })

</script>